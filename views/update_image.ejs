<%-include("partials/header.ejs") %>



<div class="container">
	<div>
		<h1>
			New Image
		</h1><br>
		<div class="mobile">
			
            <form action = "/image/<%=currentUser._id%>/current/<%=image._id%>?_method=PUT" method = "POST" >
                    <div class="form-group">
                         <label for="title">Title</label>
                         <input class="form-control" type="text" name="image[title]" value="<%=image.title%>" placeholder="Title" id="title"  required>
                    </div>
                    
                    <div class="form-group">
                         <label for="description">Description</label><br>
                         <textarea class="form-control" name="image[description]" id="description" placeholder="description" required><%=image.description%></textarea>
                    </div>
                    
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block ">
                            Edit Image
                        </button>
                    </div>

			</form>
			<a href="/">Go back</a>
		</div>
		
	</div>
	
</div>

<%-include("partials/footer.ejs") %>